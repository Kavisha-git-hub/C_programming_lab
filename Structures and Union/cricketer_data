#include <stdio.h>
#include <string.h>

struct Cricketer {
    char name[50];
    int age;
    int testMatches;
    float avgRuns;
};

int main() {
    struct Cricketer cricketers[10];
    int i, j;
    struct Cricketer temp;


    printf("Enter data for 10 cricketers:\n\n");
    for (i = 0; i < 10; i++) {
        printf("Cricketer %d:\n", i + 1);
        printf("Name: ");
        scanf("%s", cricketers[i].name);
        printf("Age: ");
        scanf("%d", &cricketers[i].age);
        printf("Test Matches: ");
        scanf("%d", &cricketers[i].testMatches);
        printf("Average Runs: ");
        scanf("%f", &cricketers[i].avgRuns);
        printf("\n");
    }

    
    for (i = 0; i < 10; i++) {
        for (j = 0; j < 10 - i - 1; j++) {
            if (cricketers[j].avgRuns > cricketers[j + 1].avgRuns) {
                temp = cricketers[j];
                cricketers[j] = cricketers[j + 1];
                cricketers[j + 1] = temp;
            }
        }
    }

    
    printf("\n\nCricketers sorted by Average Runs (Ascending):\n");
    printf("%-20s %-5s %-15s %-12s\n", "Name", "Age", "Test Matches", "Avg Runs");
    printf("-----------------------------------------------------------\n");
    for (i = 0; i < 10; i++) {
        printf("%-20s %-5d %-15d %-12.2f\n", cricketers[i].name, cricketers[i].age, 
               cricketers[i].testMatches, cricketers[i].avgRuns);
    }

    return 0;
}
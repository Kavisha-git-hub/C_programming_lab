{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run C Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "\"${file}\"",
                "-o",
                "\"${fileDirname}/${fileBasenameNoExtension}.exe\"",
                "&&",
                "\"${fileDirname}/${fileBasenameNoExtension}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Compiles and runs the active C file"
        },
        {
            "label": "Run C Program (Pause)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "\"${file}\"",
                "-o",
                "\"${fileDirname}/${fileBasenameNoExtension}.exe\"",
                "&&",
                "cmd",
                "/c",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe & pause\""
            ],
            "group": "none",
            "problemMatcher": [],
            "detail": "Compiles and runs the active C file, then pauses for output"
        }
    ]
}

